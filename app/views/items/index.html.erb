 <h1> Create new item </h1>

<ul>
  <% @item.errors.each do |field, message| %>
    <li> <%= "#{field.capitalize} #{message}." %> </li>
  <% end %>
</ul>

 
 
  <%= form_for @item do |f| %>
    <p> Name <br/> <%= f.text_field :name %> </p>
    <p class="color" > <%= error_message(@item, :name) %> </p>
    <p> Price <br/> <%= f.text_field :price %> </p>
    <p class="color" > <%= error_message(@item, :price) %> </p>
    <p> Description <br/> <%= f.text_field :description %> </p>
    <p> Weight <br/> <%= f.text_field :weight %> </p>
    <p> <%= f.submit "Create item" %> </p>
  <% end %>


<h1> Items </h1>

<table>
  <tr>
    <th> Item id </th>
    <th> Name </th>
    <th> </th>
    <th> </th>
  </tr>

  <% @items.each do |i| %>

  <tr>
    <td> <%= i.id %> </td>
    <td> <%= link_to i.name, item_path(i) %> </td>
    <td> <%= link_to "Delete", i, method: :delete, data: { confirm: "Delete?" } %> </td>
    <td> <%= link_to "Edit", edit_item_path(i.id) %> </td>
  </tr>

  <% end %>

</table>